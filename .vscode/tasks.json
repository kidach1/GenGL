{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cmake",
            "label": "CMake: ビルド",
            "command": "build",
            "targets": [
                "[N/A - キットの選択]"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake テンプレート ビルド タスク"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang アクティブなファイルのビルド",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "デバッガーによって生成されたタスク。"
        }
    ]
}